startup_message off
autodetach on
defscrollback 5000
altscreen on
vbell on

bind h focus left
bind l focus right
bind k focus up
bind j focus down

# Always display the hardstatus line at the bottom
hardstatus alwayslastline

# Example hardstatus string showing window list, date, and time
hardstatus string "%{=b kg}%-w%{+b kw}%50>%n %t%{-b kg}%+w %=%Y-%m-%d %c%<"

